            <meta name="description" content="관리자 사이트의 회원정보수정 페이지입니다.">
            <meta name="keywords" content="회원정보수정 페이지,관리자사이트,검색엔진에 보여지면 안되는뎅...">
            
            
            
            <!--우측 콘텐츠 헤더영역 -->
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>사용자 정보 확인 및 수정</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/Home/Index">Home></a>
                        </li>
                        <li>
                            <a>사용자 정보관리></a>
                        </li>
                        <li class="active">
                            <strong>확인 및 수정</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

 
            <!--우측 콘텐츠 영역 -->
            <form action="/member/modify/<%=member.member_id%>" method="post" id="memberForm">
                <div class="wrapper wrapper-content">
                    <div class="ibox-content m-b-sm border-bottom">

                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">메일주소</label>
                                    <input type="text" name="email" id="email" value="<%=member.email%>" class="form-control">
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">암호</label>
                                    <input type="password" name="password" id="password"  value="<%=member.member_password%>" class="form-control">
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">이름</label>
                                    <input type="text" name="name" id="name" value="<%=member.name%>" class="form-control">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">전화번호</label>
                                    <input type="text" name="telephone" value="<%=member.telephone%>" class="form-control">
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">프로필 이미지</label>
                                    <input type="file" name="profile"  class="form-control">
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">생년월일</label>
                                    <input type="text" name="birthday"  class="form-control">
                                </div>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">가입상태</label>
                                    <select name="entrystate" class="form-control">
                                        <option>활동중</option>
                                        <option>탈퇴</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">가입유형</label>
                                    <select name="entrytype" class="form-control" >
                                        <option <% if(member.entry_type_code == 0){%> selected <% }%>>직접가입</option>
                                        <option <% if(member.entry_type_code == 1){%> selected <% }%>>페이스북가입</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">가입일시</label>
                                </div>
                            </div>

                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">저장</button>
                            <a href="/member/list" class="btn btn-info">목록</a>
                            <a href="#" id="btnDelete" class="btn btn-danger">삭제</a>
                        </div>

                    </div>
                </div>
            </form>


            <!-- <h1 class="test">스타일 테스트</h1> -->



            <!-- 회원수정 처리 관련 클라이언트 스크립트 코드정의영역 -->
            <script>

                //memberForm 폼태그에서 submit 이벤트가 발생하면 실행되는 함수기능정의 
                $("#memberForm").submit(function(){

                    //jquery에서 $("#HTML태그의 고유아이디값")으로 해당 HTML요소를 조회한다.
                    if($("#email").val() == ""){
                        alert("메일주소를 입력해주세요.");
                        $("#email").focus();
                        return false;
                    }

                    if($("#password").val() == ""){
                        alert("암호를 입력해주세요.");
                        $("#password").focus();
                        return false;
                    }

                    //form태그의 지정된 라우팅주소로 폼데이터를 전송한다.
                    return true;
                });

                //삭제버튼 클릭시 삭제 최종여부 확인 후 삭제 페이지로 이동...
                $("#btnDelete").click(function(){
                    if(confirm("증말로 삭제하실랍니까?")){
                        location.href="/member/delete?mid=<%=member.member_id%>";
                    }
                });

            </script>

